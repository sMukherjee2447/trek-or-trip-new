<section id="pack" class="packages">
    <div class="container">
        <div class="gallary-header text-center">
            <h2>
                special packages
            </h2>
            <p>
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Vitae, officia?
            </p>
        </div>
        <!--/.gallery-header-->
        <div class="packages-content">
            <div class="row">
                <% for (let data of special_package_data) { %>
                <div class="col-md-4 col-sm-6">
                    <div class="single-package-item">
                        <img src="/<%-data.cover%>" alt="package-place">
                        <div class="single-package-item-txt">
                            <h3>
                                <%=data.place%><span class="pull-right">
                                    <%=data.amount%>
                                </span>
                            </h3>
                            <div class="packages-para">
                                <p>
                                    <span>
                                        <i class="fa fa-angle-right"></i>
                                        <%=data.stay%>
                                    </span>
                                </p>
                                <p>
                                    <span>
                                        <i class="fa fa-angle-right"></i>
                                        <%=data.transportation%>
                                    </span>
                                    <i class="fa fa-angle-right"></i>
                                    <%=data.facility%>
                                </p>
                            </div>
                            <!--/.packages-para-->
                            <div class="packages-review">
                                <p>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <span>2544 review</span>
                                </p>
                            </div>
                            <!--/.packages-review-->
                            <div class="about-btn">
                                <button onclick="location.href = '/packages/<%-data._id%%>';"
                                    class="about-view packages-btn">
                                    Read More
                                </button>
                            </div>
                            <!--/.about-btn-->
                        </div>
                        <!--/.single-package-item-txt-->
                    </div>
                    <!--/.single-package-item-->

                </div>
                <% } %>
                <!--/.col-->


            </div>
            <!--/.row-->
        </div>
        <!--/.packages-content-->
    </div>
    <!--/.container-->

</section>
