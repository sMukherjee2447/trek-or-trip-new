<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Profile</title>

        <!-- ===== ===== Custom Css ===== ===== -->
        <link rel="stylesheet" href="editprofile.css">
        <link rel="stylesheet" href="responsiveeditprofile.css">

        <!-- ===== ===== Remix Font Icons Cdn ===== ===== -->
        <link rel="stylesheet" href="fonts/remixicon.css">
    </head>

    <body>
        <!-- ===== ===== Body Main-Background ===== ===== -->
        <span class="main_bg"></span>


        <!-- ===== ===== Main-Container ===== ===== -->
        <div class="container">
            <% for(let data of user_data) { %>

            <!-- ===== ===== Header/Navbar ===== ===== -->
            <header>
                <div class="brandLogo">
                    <a href="/home">Trek or Trip</a>
                </div>
            </header>


            <!-- ===== ===== User Main-Profile ===== ===== -->
            <section class="userProfile card">
                <div class="profile">
                    <figure><img src="/<%- data.filename %>" alt="profile" width="250px" height="250px"></figure>
                </div>
            </section>


            <!-- ===== ===== Work & Skills Section ===== ===== -->
            <section class="work_skills card">

                <!-- ===== ===== Work Contaienr ===== ===== -->
                <div class="work">
                    <h1 class="heading">About</h1>
                    <div class="primary">
                        <h1>About User</h1>
                        <p>about</p>
                    </div>

                </div>

            </section>


            <!-- ===== ===== User Details Sections ===== ===== -->
            <section class="userDetails card">
                <div class="userName">
                    <h1 class="name"><%- data.fname %> <%- data.lname %></h1>
                    <div class="map">
                        <i class="ri-map-pin-fill ri" style="margin-left: 150px;"></i>
                        <span><%-data.location%>, <%-data.country%></span>
                    </div>
                </div>

                <div class="rank">
                    <h1 class="heading">Ratings</h1>
                    <span>will be given after star rating management</span>
                    <div class="rating">
                        <i class="ri-star-fill rate"></i>
                        <i class="ri-star-fill rate"></i>
                        <i class="ri-star-fill rate"></i>
                        <i class="ri-star-fill rate"></i>
                        <i class="ri-star-fill rate underrate"></i>
                    </div>
                </div>
                <!-- 
            <div class="btns">
                <ul>
                    <li class="sendMsg">
                        <i class="ri-chat-4-fill ri"></i>
                        <a href="#">Send Message</a>
                    </li>

                    <li class="sendMsg active">
                        <i class="ri-check-fill ri"></i>
                        <a href="#">Contacts</a>
                    </li>

                    <li class="sendMsg">
                        <a href="#">Report User</a>
                    </li>
                </ul>
            </div> -->
            </section>


            <!-- ===== ===== Timeline & About Sections ===== ===== -->
            <section class="timeline_about card">
                <div class="tabs">
                    <ul>
                        <li class="about active">
                            <i class="ri-user-3-fill ri"></i>
                            <span>About</span>
                        </li>
                    </ul>
                </div>

                <div class="contact_Info">
                    <h1 class="heading">Contact Information</h1>
                    <ul>
                        <li class="phone">
                            <h1 class="label">Phone:</h1>
                            <span class="info"><%-data.code%> <%-data.phone%></span>
                        </li>

                        <li class="address">
                            <h1 class="label">Address:</h1>
                            <span class="info"><%-data.address%></span>
                        </li>

                        <li class="email">
                            <h1 class="label">E-mail:</h1>
                            <span class="info"><%-data.email%>></span>
                        </li>

                        <!-- <li class="site">
                            <h1 class="label">Site:</h1>
                            <span class="info">www.rsmarquetech.com</span>
                        </li> -->
                    </ul>
                </div>

                <div class="basic_info">
                    <h1 class="heading">Basic Information</h1>
                    <ul>
                        <li class="birthday">
                            <h1 class="label">Birthday:</h1>
                            <span class="info"><%-data.dob%></span>
                        </li>

                        <li class="sex">
                            <h1 class="label">Gender:</h1>
                            <span class="info"><%-data.gender%></span>
                        </li>
                    </ul>
                </div>
            </section>
            <% } %>
        </div>

    </body>

</html>
